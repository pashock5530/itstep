<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pashock.calculator.MainActivity"
    android:id="@+id/body">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bodyPoligon">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fieldBlock"
            android:layout_weight="0.3"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text"
                android:layout_gravity="top"
                android:gravity="center_vertical|right"
                android:textColor="#6c6c6c"
                android:textSize="30dp"
                android:typeface="normal"
                android:minLines="1"
                android:maxLines="1"
                android:inputType="none"
                android:scrollIndicators="none"
                android:editable="false"
                android:text="r" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/keyBlock"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keyLine5"
                android:layout_weight="0.2">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="C"
                    android:id="@+id/btnC"
                    android:layout_weight="0.25"
                    android:background="#d7f1f1f1"
                    android:clickable="true"
                    android:textColor="#278dbc"
                    android:textSize="30dp"
                    android:onClick="keyClick" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="( )"
                    android:id="@+id/btnBr"
                    android:layout_weight="0.25"
                    android:background="#d7f1f1f1"
                    android:clickable="true"
                    android:textColor="#278dbc"
                    android:textSize="30dp"
                    android:onClick="keyClick" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="%"
                    android:id="@+id/btnPecent"
                    android:layout_weight="0.25"
                    android:background="#d7f1f1f1"
                    android:clickable="true"
                    android:textColor="#278dbc"
                    android:textSize="30dp"
                    android:onClick="keyClick" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="/"
                    android:id="@+id/btnDivesion"
                    android:layout_weight="0.25"
                    android:background="#d7f1f1f1"
                    android:clickable="true"
                    android:textColor="#278dbc"
                    android:textSize="30dp"
                    android:onClick="keyClick" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keyLine4"
                android:layout_weight="0.2">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:id="@+id/btn7"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:textColor="#6a6a6a"
                    android:textSize="30dp"
                    android:onClick="keyClick" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:id="@+id/btn8"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:textColor="#6a6a6a"
                    android:textSize="30dp"
                    android:onClick="keyClick" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:id="@+id/btn9"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:textColor="#6a6a6a"
                    android:textSize="30dp"
                    android:onClick="keyClick" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*"
                    android:id="@+id/btnMulti"
                    android:layout_weight="0.25"
                    android:background="#d7f1f1f1"
                    android:clickable="true"
                    android:textColor="#278dbc"
                    android:textSize="30dp"
                    android:onClick="keyClick" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keyLine3"
                android:layout_weight="0.2">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:id="@+id/btn4"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:textColor="#6a6a6a"
                    android:textSize="30dp"
                    android:onClick="keyClick" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:id="@+id/btn5"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:textColor="#6a6a6a"
                    android:textSize="30dp"
                    android:onClick="keyClick" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:id="@+id/btn6"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:textColor="#6a6a6a"
                    android:textSize="30dp"
                    android:onClick="keyClick" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:id="@+id/btnMinus"
                    android:layout_weight="0.25"
                    android:background="#d7f1f1f1"
                    android:clickable="true"
                    android:textColor="#278dbc"
                    android:textSize="30dp"
                    android:onClick="keyClick" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keyLine2"
                android:layout_weight="0.2">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:id="@+id/btn1"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:textColor="#6a6a6a"
                    android:textSize="30dp"
                    android:onClick="keyClick" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:id="@+id/btn2"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:textColor="#6a6a6a"
                    android:textSize="30dp"
                    android:onClick="keyClick" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:id="@+id/btn3"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:textColor="#6a6a6a"
                    android:textSize="30dp"
                    android:onClick="keyClick" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:id="@+id/btnPlus"
                    android:layout_weight="0.25"
                    android:background="#d7f1f1f1"
                    android:clickable="true"
                    android:textColor="#278dbc"
                    android:textSize="30dp"
                    android:onClick="keyClick" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keyLine1"
                android:layout_weight="0.2">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="."
                    android:id="@+id/btnDot"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:textColor="#6a6a6a"
                    android:textSize="30dp"
                    android:onClick="keyClick" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/btn0"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:textColor="#6a6a6a"
                    android:textSize="30dp"
                    android:onClick="keyClick" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+/-"
                    android:id="@+id/btnPM"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:textColor="#6a6a6a"
                    android:textSize="30dp"
                    android:onClick="keyClick" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="="
                    android:id="@+id/btnEqually"
                    android:layout_weight="0.25"
                    android:background="#c82aa904"
                    android:clickable="true"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:onClick="keyClick" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
